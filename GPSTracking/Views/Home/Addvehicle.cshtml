
@{
    ViewBag.Title = "Add vehicle : i track my vehicle";
}

<div class="container_12 clearfix" id="add_new_item_info">
    <form action="#">
        <div class="grid_8 bigger_margin">
            <div class="box clearfix">
                <h3>Vehicle info</h3>
                <div class="box-content clearfix bordered_under">
                    <div class="half left">
                        <p>
                            <label for="type" class="dropdown_label">Type</label>
                            <select name="type" id="type" class="custom_select">
                                <option value="">Cars</option>
                                <option value="">Motorcycles</option>
                                <option value="">Trucks</option>
                            </select>
                        </p>
                        <p class="smaller_margin">
                            <label for="condition_new" class="custom_radio"><input type="radio" name="condition" id="condition_new" value="new">New items</label>
                            <label for="condition_used" class="custom_radio"><input type="radio" name="condition" id="condition_used" value="used">Used items</label>
                        </p>
                    </div>
                    <div class="half right">
                        <p>
                            <label for="category" class="dropdown_label">Category</label>
                            <select name="category" id="category" class="custom_select">
                                <option value="">Sedan</option>
                                <option value="">Hedgeback</option>
                                <option value="">Pick-up</option>
                            </select>
                        </p>
                    </div>
                </div>
                <div class="box-content clearfix bordered_under">
                    <div class="half left">
                        <p>
                            <label for="location" class="dropdown_label">Location</label>
                            <select name="location" id="location" class="custom_select">
                                <option value="">New York</option>
                                <option value="">Chicago</option>
                                <option value="">Washington</option>
                                <option value="">Boston</option>
                            </select>
                        </p>
                        <p>
                            <label for="brand" class="dropdown_label">Brand</label>
                            <select name="brand" id="brand" class="custom_select">
                                <option value="">All</option>
                                <option value="">BMW</option>
                                <option value="">Mercedes</option>
                                <option value="">Audi</option>
                                <option value="">Ferrari</option>
                            </select>
                        </p>
                        <p>
                            <label for="model" class="dropdown_label">Model</label>
                            <select name="model" id="model" class="custom_select">
                                <option value="">All</option>
                                <option value="">C</option>
                                <option value="">E</option>
                                <option value="">S</option>
                                <option value="">CLK</option>
                                <option value="">SLK</option>
                            </select>
                        </p>
                        <p>
                            <label for="price_from" class="dropdown_label">Price range</label>
                            <select name="price_from" id="price_from" class="custom_select range">
                                <option value="">$5.000</option>
                                <option value="">$10.000</option>
                                <option value="">$15.000</option>
                                <option value="">$20.000</option>
                            </select>
                            <span class="range_delimiter">-</span>
                            <select name="price_to" id="price_to" class="custom_select range">
                                <option value="">$5.000</option>
                                <option value="">$10.000</option>
                                <option value="">$15.000</option>
                                <option value="">$20.000</option>
                            </select>
                        </p>
                        <p>
                            <label for="exterior_color" class="dropdown_label">Exterior color</label>
                            <select name="exterior_color" id="exterior_color" class="custom_select">
                                <option value="">Black</option>
                                <option value="">White</option>
                                <option value="">Silver</option>
                                <option value="">Red</option>
                                <option value="">Blue</option>
                            </select>
                        </p>
                        <p>
                            <label for="interior_color" class="dropdown_label">Interior color</label>
                            <select name="interior_color" id="interior_color" class="custom_select">
                                <option value="">Dark grey</option>
                                <option value="">Dark brown</option>
                                <option value="">Light gray</option>
                            </select>
                        </p>
                    </div>
                    <div class="half right">
                        <p>
                            <label for="transmision" class="dropdown_label">Transmision</label>
                            <select name="transmision" id="transmision" class="custom_select">
                                <option value="">Manual</option>
                                <option value="">Semi-automatic</option>
                                <option value="">Automatic</option>
                            </select>
                        </p>
                        <p>
                            <label for="engine_from" class="dropdown_label">Engine range</label>
                            <select name="engine_from" id="engine_from" class="custom_select range">
                                <option value="">0,8</option>
                                <option value="">1,2</option>
                                <option value="">1,6</option>
                                <option value="">1,9</option>
                                <option value="">2,0</option>
                                <option value="">2,5</option>
                                <option value="">3,0</option>
                                <option value="">4,0</option>
                                <option value="">5,0</option>
                                <option value="">6,0</option>
                            </select>
                            <span class="range_delimiter">-</span>
                            <select name="engine_to" id="engine_to" class="custom_select range">
                                <option value="">0,8</option>
                                <option value="">1,2</option>
                                <option value="">1,6</option>
                                <option value="">1,9</option>
                                <option value="">2,0</option>
                                <option value="">2,5</option>
                                <option value="">3,0</option>
                                <option value="">4,0</option>
                                <option value="">5,0</option>
                                <option value="">6,0</option>
                            </select>
                        </p>
                        <p>
                            <label for="fuel" class="dropdown_label">Fuel</label>
                            <select name="fuel" id="fuel" class="custom_select">
                                <option value="">Gasoline</option>
                                <option value="">Diesel</option>
                                <option value="">LPG</option>
                            </select>
                        </p>
                        <p>
                            <label for="drive" class="dropdown_label">Drive</label>
                            <select name="drive" id="drive" class="custom_select">
                                <option value="">Front-wheel</option>
                                <option value="">Rear-wheel</option>
                                <option value="">4x4</option>
                            </select>
                        </p>
                        <p>
                            <label for="milage_from" class="dropdown_label">Mileage</label>
                            <select name="milage_from" id="milage_from" class="custom_select range">
                                <option value="">5.000</option>
                                <option value="">10.000</option>
                                <option value="">15.000</option>
                                <option value="">20.000</option>
                                <option value="">40.000</option>
                                <option value="">60.000</option>
                            </select>
                            <span class="range_delimiter">-</span>
                            <select name="milage_to" id="milage_to" class="custom_select range">
                                <option value="">5.000</option>
                                <option value="">10.000</option>
                                <option value="">15.000</option>
                                <option value="">20.000</option>
                                <option value="">40.000</option>
                                <option value="">60.000</option>
                            </select>
                        </p>
                    </div>
                </div>
                <div class="box-content clearfix bordered_under">
                    <div class="half left">
                        <p>
                            <label for="type" class="dropdown_label">License renewal Date</label>
                            <input type="text"/>
                        </p>
                        <p class="smaller_margin">
                            <label for="type" class="dropdown_label">Owner/Driver mobile no</label>
                            <input type="text" />
                        </p>
                    </div>
                    <div class="half right">
                        <p>
                            <label for="type" class="dropdown_label">Registered Date</label>
                            <input type="text" />
                        </p>
                        <p>
                            <label for="type" class="dropdown_label">Tracking Device/Gps Id</label>
                            <input type="text" />
                        </p>
                    </div>
                </div>
            </div>
            <div class="box">
                <h3>Vehicle description</h3>
                <div class="box-content">
                    <textarea name="description" id="description" placeholder="Enter your description"></textarea>
                </div>
            </div>
            <a class="button submit green">Track my vehicle</a>
        </div>
        <div class="grid_4">
            <div class="box">
                <h3>Add Photos</h3>
                <div class="box-content">
                    <p class="centered_content">
                        <a href="#" class="button red">Upload photos</a>
                    </p>
                </div>
            </div>
            <div class="box">
                <h3>Add video</h3>
                <div class="box-content">
                    <p class="centered_content">
                        <a href="#" class="button red">Upload video</a>
                    </p>
                </div>
            </div>
            <div class="box">
                <h3>Privacy options</h3>
                <div class="box-content">
                    <p><label for="negotiable" class="custom_checkbox"><input type="checkbox" name="negotiable" id="negotiable">Show in public</label></p>
                    <p><label for="exchange" class="custom_checkbox"><input type="checkbox" name="trackvehicle" id="trackvehicle">Track my vehicle</label></p>
                    <p><label for="renewalert" class="custom_checkbox"><input type="checkbox" checked="checked" name="renewalert" id="renewalert">Send renewal alert</label></p>

                </div>
            </div>
        </div>
    </form>
</div>


