@using GPSTracking.Models
@model GPSTracking.Domain.Entities.Vehicle
@{
    ViewBag.Title = "Add vehicle : i track my vehicle";
    var vmHelper = (VehicleViewModel)ViewBag.VM;
}

<div class="container_12 clearfix" id="add_new_item_info">

    @using(Html.BeginForm("Addvehicle", "home"))
    {   
        <div class="grid_8 bigger_margin">
            <div class="box clearfix">
                <h3>Vehicle info</h3>
                <div class="box-content clearfix bordered_under">
                    <div class="half left">
                        <p>
                            @Html.LabelFor(m => m.TypeId, "Type", new { @class = "dropdown_label" })
                            @Html.DropDownListFor(m => m.TypeId, new SelectList(vmHelper.AvailableVehicleDriveTypes, "Id", "Name"), new { @class = "custom_select" })
                        </p>
                        <p class="smaller_margin">
                            <label for="IsNew" class="custom_radio">
                                @Html.RadioButtonFor(m => m.IsNew, true, new { @id = "IsNew" }) New Item
                            </label>
                            <label for="IsUsed" class="custom_radio">
                                @Html.RadioButtonFor(m => m.IsNew, false, new { @id = "IsUsed" }) Used Item
                            </label>
                        </p>
                    </div>
                    <div class="half right">
                        <p>
                            @Html.LabelFor(m => m.CategoryId, "Category", new { @class = "dropdown_label" })
                            @Html.DropDownListFor(m => m.CategoryId, new SelectList(vmHelper.AvailableVehicleCategories, "Id", "Name"), new { @class = "custom_select" })
                        </p>
                    </div>
                </div>
                <div class="box-content clearfix bordered_under">
                    <div class="half left">
                        <p>
                            @Html.LabelFor(m => m.LocationId, "Location", new { @class = "dropdown_label" })
