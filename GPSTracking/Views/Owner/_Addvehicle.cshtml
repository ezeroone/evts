@using GPSTracking.Models
@model VehicleViewModel

<form class="listing-add-form">
    <section class="listing-form-content">

        <!-- AD LISTING FORM STEP ONE -->
        <div id="listing-add-form-one" class="tab-pane fade in active">
            <h3>Enter your vehicle details</h3>
            <div class="lighter"><p>Listing can be added with a starting point of choosing your vehicle wither by searching listing using Make, Model, Year or can add a completely unique listing.</p></div>
            <div class="spacer-10"></div>
            <div class="tabs listing-step-tabs">
                <ul class="nav nav-tabs">
                    <li class="active"> <a data-toggle="tab" href="#searchvehicle" aria-controls="searchvehicle" role="tab">Add your vehicle</a></li>
                    <li> <a data-toggle="tab" href="#addcustom" aria-controls="addcustom" role="tab">Add Tracking details</a></li>
                    <li> <a data-toggle="tab" href="#addcustom1" aria-controls="addcustom1" role="tab">Add vehicle photos</a></li>
                </ul>
                <div class="tab-content">
                    <!-- CUSTOM VEHICLE LISTING -->
                    <div id="searchvehicle" class="tab-pane fade in active">
                      
                        <div class="row">
                            <div class="col-md-6">
                                <label>Select Vehicle type*</label>
                                @Html.DropDownListFor(m => m.Vehicle.TypeId, new SelectList(Model.AvailableVehicleTypes, "Id", "Name"), new { @class = "form-control selectpicker" })

                                <label>Make *</label>
                                @Html.TextBoxFor(m => m.Vehicle.Make, new { @class = "form-control" })

                                <label>Select Model*</label>
                                @Html.DropDownListFor(m => m.Vehicle.ModelId, new SelectList(Model.AvailableVehicleModels, "Id", "Name"), new { @class = "form-control selectpicker" })

                                <label>Select Manufacture Year *</label>
                                @Html.DropDownListFor(m => m.Vehicle.MakeYear, new SelectList(Model.Years, "Id", "Name"), new { @class = "form-control selectpicker" })

                                <label>Select Registered Year *</label>
                                @Html.DropDownListFor(m => m.Vehicle.RegYear, new SelectList(Model.Years, "Id", "Name"), new { @class = "form-control selectpicker" })

                                <label>Select Drive Type*</label>
                                @Html.DropDownListFor(m => m.Vehicle.TypeId, new SelectList(Model.AvailableVehicleDriveTypes, "Id", "Name"), new { @class = "form-control selectpicker" })

                                <label>Select Fuel Type*</label>
                                @Html.DropDownListFor(m => m.Vehicle.FuelTypeId, new SelectList(Model.AvailableVehicleFuelTypes, "Id", "Name"), new { @class = "form-control selectpicker" })

                            </div>
                            <div class="col-md-6">

                                <label>Select Body Type*</label>
                                @Html.DropDownListFor(m => m.Vehicle.CategoryId, new SelectList(Model.AvailableVehicleCategories, "Id", "Name"), new { @class = "form-control selectpicker" })


                                <label>Select Transmission Type*</label>
                                @Html.DropDownListFor(m => m.Vehicle.TransmissionId, new SelectList(Model.AvailableVehicleTransmisions, "Id", "Name"), new { @class = "form-control selectpicker" })

                                <label>Enter Engine Capacity*</label>
                                @Html.TextBoxFor(m => m.Vehicle.EngCapacity, new { @class = "form-control" })

                                <label>Enter Mileage*</label>
                                @Html.TextBoxFor(m => m.Vehicle.Mileage, new { @class = "form-control" })

                                <label>Select Location *</label>
                                @Html.DropDownListFor(m => m.Vehicle.LocationId, new SelectList(Model.AvailableLocations, "Id", "Name"), new { @class = "form-control selectpicker" })


                                <button class="btn btn-info pull-right">Save &amp; continue</button>

                            </div>
                        </div>
                    </div>
                    <!-- VEHICLE SEARCH AD LISTING -->
                    <div id="addcustom" class="tab-pane fade  ">
                        
                        <div class="row">
                            <div class="col-md-6">
                                <label>Select Make</label>
