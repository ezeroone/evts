@model GPSTracking.Models.LoginViewModel

@using (Html.BeginForm("LoginPartial", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.TextBoxFor(m => m.UserName, new { type = "text", placeholder = "Enter your email" })
    @Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "Enter your password" })
    <label class="custom_checkbox remember_me" for="RememberMe">
        @Html.CheckBoxFor(m => m.RememberMe) Remember me
    </label>
    @*<a class="button submit red right">Login</a>*@
    <input type="submit" class="button red right" value="Login" />
    <a class="forgotten_pass right" href="#">Forgot your password?</a>
}