                                    <div class="item_heading">
                                        <div class="overlayed" style="height: 100px">
                                            <img class="span6" src="@item.Path">
                                            <div class="overlay">
                                                <span class="overlay-icon-single">
                                                    <a data-fancybox-group="group1" class="fancybox" href="@item.Path">
                                                        <i class="icomoon-expand-2"></i>
                                                    </a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item_footer">
                                        <a class="clear_filters removeImage" href="">
                                            <i class="icon-remove"></i>Remove Document
                                        </a>
                                    </div>
                                </article>*@
    }
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
